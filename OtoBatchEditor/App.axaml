<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="OtoBatchEditor.App"
             xmlns:local="using:OtoBatchEditor"
             RequestedThemeVariant="Default"
             xmlns:styles="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
             xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
             xmlns:dataGrid="clr-namespace:Material.Avalonia.DataGrid;assembly=Material.Avalonia.DataGrid"
             xmlns:dialogHostAvalonia="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia">
  <Application.DataTemplates>
    <local:ViewLocator/>
  </Application.DataTemplates>

  <Application.Styles>
    <themes:MaterialTheme PrimaryColor="Cyan" SecondaryColor="Lime" />
    <dataGrid:MaterialDataGridStyles/>
    <dialogHostAvalonia:DialogHostStyles />
    <materialIcons:MaterialIconStyles />
    <StyleInclude Source="/Styles.axaml"/>
  </Application.Styles>

  <Application.Resources>
    <SolidColorBrush x:Key="MaterialPrimaryLightBrush" Color="#80deea"></SolidColorBrush>
    <FontFamily x:Key="NotoSans">avares://OtoBatchEditor/Assets/NotoSans-Regular.ttf#Noto Sans</FontFamily>
  </Application.Resources>
</Application>