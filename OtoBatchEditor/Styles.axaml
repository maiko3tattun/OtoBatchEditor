<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:OtoBatchEditor.Views"
        xmlns:styles="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
        xmlns:assists="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
        xmlns:dialogHost="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
        xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        xmlns:dataGrid="clr-namespace:Material.Avalonia.DataGrid;assembly=Material.Avalonia.DataGrid">
  <Design.PreviewWith>
    <Border Padding="0">
      <StackPanel Orientation="Horizontal">
        <TextBlock Text="a" VerticalAlignment="Center"/>
        <TextBox Text="" Watermark="ほげほ" Width="50" Margin="0"/>
        <TextBox Text="" Watermark="h" Width="50" Margin="0"/>
        <TextBox Text="" Watermark="30" Width="50" Margin="0"/>
        <CheckBox Content="チェックボックス" IsChecked="True" Margin="10,0,0,0"/>
      </StackPanel>
    </Border>
  </Design.PreviewWith>
  
  <Style Selector="Window">
    <Setter Property="FontFamily" Value="{DynamicResource NotoSans}"/>
  </Style>

  <Style Selector="TextBlock">
    <Setter Property="TextWrapping" Value="Wrap"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="LineHeight" Value="16"/>
  </Style>

  <Style Selector="TextBlock.header">
    <Setter Property="FontSize" Value="17"/>
    <Setter Property="Margin" Value="10,0,0,0"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>

  <Style Selector="TextBlock.Note">
    <Setter Property="Text" Value="処理前に「oto_backup.ini」を作成します。すでにある場合は上書きします。"/>
    <Setter Property="Margin" Value="15"/>
    <Setter Property="FontSize" Value="13"/>
  </Style>

  <Style Selector="StackPanel">
    <Setter Property="ClipToBounds" Value="False"/>
    
    <Style Selector="^.content">
      <Setter Property="Margin" Value="10"/>
    </Style>

    <Style Selector="^.grid">
      <Style Selector="^ TextBlock">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="FontWeight" Value="Bold"/>
      </Style>
      <Style Selector="^ CheckBox">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
      </Style>
      <Style Selector="^ styles|FloatingButton">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="MinHeight" Value="32"/>
        <Setter Property="MinWidth" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Width" Value="32"/>
        <Style Selector="^.plus">
          <Setter Property="Content">
            <Template>
              <materialIcons:MaterialIcon Kind="Plus" Width="20" Height="20"/>
            </Template>
          </Setter>
        </Style>
        <Style Selector="^.minus">
          <Setter Property="Content">
            <Template>
              <materialIcons:MaterialIcon Kind="Minus" Width="20" Height="20"/>
            </Template>
          </Setter>
        </Style>
      </Style>
    </Style>
  </Style>


  <Style Selector="styles|Card">
    <Setter Property="CornerRadius" Value="6"/>
  </Style>

  <Style Selector="styles|ColorZone.header">
    <Setter Property="Padding" Value="15,0"/>
    <Setter Property="Mode" Value="PrimaryMid"/>
    <Setter Property="DockPanel.Dock" Value="Top"/>
    <Setter Property="Height" Value="54"/>
  </Style>

  <Style Selector="CheckBox.Overwrite">
    <Setter Property="Content" Value="既存のエイリアスを上書きする"/>
    <Setter Property="Margin" Value="10,0,10,10"/>
  </Style>
  
  <Style Selector="TextBox">
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Setter Property="Height" Value="34"/>
    <Setter Property="TextAlignment" Value="Center"/>
    
    <Style Selector="^ /template/ Panel#PART_TextFieldPanel">
      <Setter Property="MinHeight" Value="18" />
      <Setter Property="Margin" Value="1,3,1,2" />
    </Style>
      
    <Style Selector="^ /template/ Panel#PART_TextContainer">
      <Setter Property="Margin" Value="1,5,1,7" />
    </Style>
  </Style>

  <Style Selector="Button.Ok">
    <Setter Property="Content" Value="実行"/>
    <Setter Property="Width" Value="100"/>
    <Setter Property="Margin" Value="15"/>
    <Setter Property="HorizontalAlignment" Value="Right"/>
  </Style>

  <Style Selector="Button.NoHover">
    <Setter Property="assists:ButtonAssist.HoverColor" Value="Transparent"/>
    <Setter Property="assists:ButtonAssist.ClickFeedbackColor" Value="Transparent"/>
  </Style>
  
  <Style Selector="RadioButton">
    <Setter Property="Margin" Value="0,2"/>
    <Setter Property="Padding" Value="4,0,0,0"/>
  </Style>
  <Style Selector="RadioButton.NoHover">
    <Style Selector="^ /template/ Ellipse#PART_HoverEffect">
      <Setter Property="Opacity" Value="0"/>
    </Style>
  </Style>

  <Style Selector="ListBox">
    <Setter Property="ClipToBounds" Value="False"/>
  </Style>
  <Style Selector="ListBox.RadioButtonListBox">
    <Setter Property="BorderBrush" Value="Transparent"/>
    <Setter Property="Background" Value="Transparent"/>
  </Style>
  <Style Selector="ListBox.RadioButtonListBox ListBoxItem">
    <Setter Property="ClipToBounds" Value="False"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate>
          <Border Background="Transparent">
            <RadioButton Content="{TemplateBinding ContentPresenter.Content}" Classes="NoHover"
                         IsChecked="{Binding Path=IsSelected,RelativeSource={RelativeSource TemplatedParent},Mode=TwoWay}"/>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style Selector="MenuItem">
    <Setter Property="ClipToBounds" Value="False"/>
    <Setter Property="FontSize" Value="13"/>
  </Style>

  <Style Selector="ItemsControl">
    <Setter Property="ClipToBounds" Value="False"/>
  </Style>

  <Style Selector="dialogHost|DialogHost">
    <Setter Property="dialogHost:DialogHostStyle.CornerRadius" Value="6"/>
    <Setter Property="CloseOnClickAway" Value="True"/>
  </Style>
  
</Styles>
