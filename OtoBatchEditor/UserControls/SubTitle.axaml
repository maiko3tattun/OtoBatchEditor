<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:OtoBatchEditor"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OtoBatchEditor.SubTitle"
             x:DataType="local:SubTitle"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia">
  <UserControl.Template>
    <ControlTemplate>
      <StackPanel Orientation="Horizontal" Spacing="4" Margin="10,15">
        <materialIcons:MaterialIcon Kind="{TemplateBinding Icon}" Width="20" Height="20"/>
        <TextBlock Text="{TemplateBinding Text}" FontSize="17"/>
      </StackPanel>
    </ControlTemplate>
  </UserControl.Template>
</UserControl>
